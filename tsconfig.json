{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "noImplicitAny": true,
    "noUnusedLocals": true,
		"noUnusedParameters": true,

    "rootDir": "./src",
    "outDir": "./build",

    "declaration": true,
    "pretty": true
  },
  "include": [
    "./src/**/*"
  ]
}
