{
  "name": "lasagne",
  "description": "Easy way to mock api locally",
  "version": "1.0.4-alpha",
  "main": "./build/index.js",
  "license": "MIT",
  "author": "lamartire",
  "repository": {
    "type": "github",
    "url": "https://github.com/lamartire/lasagne"
  },
  "scripts": {
    "compile": "./node_modules/typescript/bin/tsc",
    "dev": "./node_modules/typescript/bin/tsc -w",
    "test": "./node_modules/jest-cli/bin/jest.js",
    "lint": "./node_modules/tslint/bin/tslint src/**/*.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "^.+\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "prettier": "^1.11.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.9.1",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  }
}
